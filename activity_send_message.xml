<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendMessage">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/gradient" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#f1e6c9"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/SendMessage"
        android:layout_width="300dp"
        android:layout_height="420dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:background="#fcfcfc"
        android:padding="20dp">


        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                    Choose a number"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Send Whatsapp Message on:"/>
        <Button
            android:id="@+id/pwhatsapp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonstyle"
            android:text="Primary number"
            android:textColor="#fff"
            />
        <Button
            android:id="@+id/swhatsapp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonstyle"
            android:text="Secondary number"
            android:textColor="#fff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Send Text Message (SMS) on:"/>
        <Button
            android:id="@+id/psms"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonstyle"
            android:text="Primary number"
            android:textColor="#fff"
            />
        <Button
            android:id="@+id/ssms"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonstyle"
            android:text="Secondary number"
            android:textColor="#fff"
            />
        
    </LinearLayout>
    <TextView
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_above="@id/SendMessage"
        android:layout_marginTop="30dp"
        android:text="Action"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>